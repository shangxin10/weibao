<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
    </FrameLayout>
    <include layout="@layout/include_splitline"></include>
    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        >
        <LinearLayout
            android:id="@+id/ll_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y18"
                android:layout_marginTop="@dimen/y5"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tab_menu_shop"
                android:clickable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y2"
                android:text="@string/tab_menu_shop"
                android:textSize="@dimen/x13"
                android:clickable="false"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_hall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y18"
                android:layout_marginTop="@dimen/y5"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tab_menu_hall"
                android:clickable="false"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y2"
                android:text="@string/tab_menu_hall"
                android:textSize="@dimen/x13"
                android:clickable="false"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y18"
                android:layout_marginTop="@dimen/y5"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tab_menu_user"
                android:clickable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y2"
                android:text="@string/tab_menu_user"
                android:textSize="@dimen/x13"
                android:clickable="false"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>