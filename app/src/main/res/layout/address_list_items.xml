<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@dimen/y5"
    android:clickable="true"
    android:id="@+id/ll_items">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_receName"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:text="@string/tx_receName"
            android:textSize="@dimen/x16"
            android:layout_marginTop="@dimen/y6"
            android:layout_marginLeft="@dimen/x12"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/tv_recePhone"
            android:layout_width="@dimen/x180"
            android:layout_height="wrap_content"
            android:text="@string/tx_recePhone"
            android:layout_marginTop="@dimen/y6"
            android:textSize="@dimen/x16"
            android:layout_marginLeft="@dimen/x12"
            android:clickable="false"
            />
    </LinearLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/x5"
        android:text=">"
        android:clickable="false"
        android:textSize="@dimen/x20"/>
    <TextView
        android:id="@+id/tv_receAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tx_address"
        android:textSize="@dimen/x16"
        android:layout_marginLeft="@dimen/x12"
        android:clickable="false"
        />
</LinearLayout>