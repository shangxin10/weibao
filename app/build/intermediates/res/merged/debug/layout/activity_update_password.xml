<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/update_data_top_bar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tx_oldPassword"
            android:layout_marginTop="@dimen/y8"
            android:textSize="@dimen/x16"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            />
        <EditText
            android:id="@+id/et_oldPassword"
            android:layout_marginTop="@dimen/y8"
            android:textSize="@dimen/x16"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:paddingLeft="@dimen/x10"
            android:background="@drawable/et_bg_border"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/tv_password"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/tx_password"
            android:layout_marginTop="@dimen/y8"
            android:textSize="@dimen/x16"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y28"
            android:layout_marginTop="@dimen/y8"
            android:textSize="@dimen/x16"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:paddingLeft="@dimen/x10"
            android:background="@drawable/et_bg_border"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/tv_repeatPassword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/tx_repeatPassword"
            android:layout_marginTop="@dimen/y8"
            android:textSize="@dimen/x16"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            />

        <EditText
            android:id="@+id/et_repeatPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:layout_marginTop="@dimen/y8"
            android:textSize="@dimen/x16"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:paddingLeft="@dimen/x10"
            android:background="@drawable/et_bg_border"
            android:inputType="textPassword"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

        </FrameLayout>

        <TextView
            android:id="@+id/tv_makesure"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y28"
            android:text="@string/tx_makesure"
            android:textSize="@dimen/x16"
            android:textColor="#084ff5"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y28"
            android:text="@string/tx_back"
            android:textColor="#084ff5"
            android:textSize="@dimen/x16"
            android:clickable="true"/>


    </LinearLayout>
</LinearLayout>